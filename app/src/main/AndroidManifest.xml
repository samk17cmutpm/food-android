<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="startupordie.food">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".food_detail.FoodsDetailActivity"
            android:label="@string/title_activity_foods_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".food_popular.FoodsPopularActivity"
            android:label="@string/title_activity_foods_popular"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".restaurant.RestaurantsActivity"
            android:label="@string/title_activity_restaurants"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>